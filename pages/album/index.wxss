.main {
  box-sizing: border-box;
  width: 100vw;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
  min-height: 88vh;
}
  .main > view {
    position: relative;
    display: flex;
    align-items: center;
    width: 33.3333vw;
    height: 33.3333vw;
    background-color: #222;
    text-align: center;
  }
  .main > view > cover-view {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
    .main > view > image,
    .main > view > video {
      width: 100%;
      height: 100%;
    }

