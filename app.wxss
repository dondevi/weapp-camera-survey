page {
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  background-color: #000;
  color: #fff;
  font-size: 32rpx;
  line-height: 1.6;
}

.body {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  min-height: 100vh;
}

.active {
  color: #f6cc3c;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100vw;
  padding: 15rpx 30rpx;
  background: #000;
  text-align: center;
  box-sizing: border-box;
}
  .col { flex: 1; white-space: nowrap; }
  .col:first-child { text-align: left; }
  .col:last-child { text-align: right; }
  .col:only-child { text-align: center; }
